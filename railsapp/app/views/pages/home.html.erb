          <%= form.text_field :expiration_date, placeholder: "MM / YY", class: "w-full py-3 px-4 border border-gray-400 rounded-lg focus:outline-none focus:border-blue-500" %>
        </div>
        <div class="col-span-2 sm:col-span-1">
          <%= form.label :cvv, class: "block text-sm font-medium text-gray-700 mb-2" do %>
